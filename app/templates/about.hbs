<div id="about-content" class="row">
    <div class="col s12 m6">
        <h2 class="center-align f-200">Schedules</h2>
        <div id="schedule-section" class="about-section">
            {{#each schedule in schedules}}
            <div id="schedules-row" class="row z-depth-1 click-area">
                <div id="schedule-col" class="col s10 m8">
                    {{input class="schedule-title-input" value=schedule.title placeholder="Schedule Title"}}
                </div>
                <div {{action 'selectSchedule' schedule.id}} id="schedule-select-button" class="select-button-class col s2 m4 right-align">
                    <i class="mdi-hardware-keyboard-arrow-right"></i>
                </div>
            </div>
            {{/each}}
        </div>
    </div>

    <div class="col s12 m6">
        <h2 class="center-align f-200">Create New</h2>
        <div class="about-section row">
            <div class="col s12">
                <div class="input-field">
                    {{input value=new_title}}
                    <label for="new_title">Schedule Title</label>
                </div>
            </div>
            <div class="center-align col s12">
                <a {{action 'createNew'}} id='red-button' class="waves-effect waves-light btn">Create Schedule</a>
            </div>
        </div>
    </div>
</div>

<footer id="custom-footer" class="page-footer">
    <div class="">
        <div id="footer-row" class="row">
            <div class="col s12 m6">
                <p class="white-text">{{footer_message}}</p>
            </div>
            <div id="buy-us" class="col s12 m6">
                <p class="class-white-text">
                    <a {{action 'buyUs'}} id="buy-us-button" class="click-area">
                        Buy us a Beer
                    </a>
                </p>
            </div>
            {{#if show_buy_us}}
            <div class="col s12">
                <p class="white-text">
                    <div id="bitcoin-input-div" class="input">
                        Bitcoins! - {{input id="bitcoin-input" value=bitcoin_address disabled="true"}}
                    </div>
                </p>
            </div>
            {{/if}}
        </div>
    </div>
</footer>

